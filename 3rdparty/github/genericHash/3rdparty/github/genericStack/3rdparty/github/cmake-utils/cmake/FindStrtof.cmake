MACRO (FINDSTRTOF)
  GET_PROPERTY(source_dir_set GLOBAL PROPERTY MYPACKAGE_SOURCE_DIR SET)
  IF (NOT ${source_dir_set})
    MESSAGE (WARNING "Cannot check strtof, property MYPACKAGE_SOURCE_DIR is not set")
  ELSE ()
    IF (NOT C_STRTOF_SINGLETON)
      GET_PROPERTY(source_dir GLOBAL PROPERTY MYPACKAGE_SOURCE_DIR)
      SET (_C_STRTOF_FOUND FALSE)
      #
      # Test
      #
      FOREACH (KEYWORD "strtof" "_strtof" "__strtof")
        MESSAGE(STATUS "Looking for ${KEYWORD}")
        TRY_COMPILE (C_HAS_${KEYWORD} ${CMAKE_CURRENT_BINARY_DIR}
          ${source_dir}/strtof.c
          COMPILE_DEFINITIONS -DC_STRTOF=${KEYWORD})
        IF (C_HAS_${KEYWORD})
          MESSAGE(STATUS "Looking for ${KEYWORD} - found")
          SET (_C_STRTOF ${KEYWORD})
          SET (_C_STRTOF_FOUND TRUE)
          BREAK ()
        ENDIF ()
      ENDFOREACH ()
    ENDIF ()
    IF (_C_STRTOF_FOUND)
      SET (C_STRTOF "${_C_STRTOF}" CACHE STRING "C strtof implementation")
      MARK_AS_ADVANCED (C_STRTOF)
    ENDIF ()
    SET (C_STRTOF_SINGLETON TRUE CACHE BOOL "C strtof check singleton")
    MARK_AS_ADVANCED (C_STRTOF_SINGLETON)
  ENDIF ()
ENDMACRO()
